# speak-gwop runs on port 3020 for this demo
PORT=3020
PUBLIC_BASE_URL=http://localhost:3020

# Optional global gate for hosted demos. Leave empty for local unmetered testing.
MASTER_API_KEY=
GWOP_API_BASE=https://api.gwop.io
GWOP_CHECKOUT_API_KEY=
GWOP_WEBHOOK_SECRET=

# Persistence (recommended: dedicated Speak Postgres, e.g., Railway)
# Required: either set DATABASE_URL or the PG* fields below.
DATABASE_URL=
PGHOST=
PGPORT=5432
PGUSER=
PGPASSWORD=
PGDATABASE=
DB_SSL=true

# Required: Redis queue backend for async TTS workers
REDIS_URL=

# Provider: mock or elevenlabs
TTS_PROVIDER=mock
ELEVENLABS_API_KEY=
ELEVENLABS_DEFAULT_VOICE_ID=JBFqnCBsd6RMkjVDRZzb
ELEVENLABS_DEFAULT_MODEL_ID=eleven_multilingual_v2
ELEVENLABS_DEFAULT_OUTPUT_FORMAT=mp3_44100_128

# Queue and artifact settings
MAX_CONCURRENT_JOBS=2
AUDIO_RETENTION_HOURS=168
ARTIFACT_CLEANUP_INTERVAL_MS=1800000
AGENT_SESSION_TTL_SECONDS=86400

# Artifact storage backend
# local: writes files under services/speak-gwop/data/audio
# s3: uploads to an S3-compatible bucket (for Railway/Tigris, Cloudflare R2, etc)
STORAGE_BACKEND=local

# S3-compatible storage config (required when STORAGE_BACKEND=s3)
S3_ENDPOINT=
S3_BUCKET=
S3_REGION=auto
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_FORCE_PATH_STYLE=true
S3_SIGNED_URL_TTL_SECONDS=3600
S3_KEY_PREFIX=artifacts
